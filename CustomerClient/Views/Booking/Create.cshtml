@model CustomerClient.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" type="date" class="form-control" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingTime"></label>
        <input asp-for="BookingTime" type="time" class="form-control" />
        <span asp-validation-for="BookingTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GuestCount"></label>
        <input asp-for="GuestCount" type="number" class="form-control" />
        <span asp-validation-for="GuestCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDescription"></label>
        <textarea asp-for="BookingDescription" class="form-control"></textarea>
        <span asp-validation-for="BookingDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Invited Guests (comma-separated emails):</label>
        <input asp-for="InvitedGuests" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit Booking</button>
</form>
