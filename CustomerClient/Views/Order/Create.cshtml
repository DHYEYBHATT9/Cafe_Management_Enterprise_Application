@model CustomerClient.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Items"></label>
        <input asp-for="Items" class="form-control" />
        <span asp-validation-for="Items" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalPrice"></label>
        <input asp-for="TotalPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Order</button>
</form>
